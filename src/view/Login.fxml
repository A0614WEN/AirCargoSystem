<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="704.0" prefWidth="684.0" spacing="20.0" styleClass="root, padded-container" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <children>
        <Label styleClass="title-label" text="航空货物管理系统" />
        <Label fx:id="errorLabel" styleClass="error-label" />
        <TextField fx:id="usernameField" promptText="用户名" styleClass="text-field" />
        <PasswordField fx:id="passwordField" promptText="密码" styleClass="password-field" />
        <Button onAction="#handleLogin" styleClass="button" text="登录" />
        <Button onAction="#showRegister" styleClass="button-secondary" text="注册" />
    </children>
</VBox>

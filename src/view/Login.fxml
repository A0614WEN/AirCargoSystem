<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" styleClass="root, padded-container" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <children>
        <Label text="航空货物管理系统" styleClass="title-label" />
        <Label fx:id="errorLabel" styleClass="error-label" />
        <TextField fx:id="usernameField" promptText="用户名" styleClass="text-field" />
        <PasswordField fx:id="passwordField" promptText="密码" styleClass="password-field" />
        <Button onAction="#handleLogin" text="登录" styleClass="button" />
        <Button onAction="#showRegister" text="注册" styleClass="button-secondary" />
    </children>
</VBox>
